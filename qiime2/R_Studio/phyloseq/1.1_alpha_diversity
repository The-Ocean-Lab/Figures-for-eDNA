# Goal: to visualize the alpha diversity indices of observed, chao1, ACE, shannon, Simpson, InvSimpson, Fisher as box and whisker plots

library(qiime2R) 
library(ggplot2)
library(phyloseq)
library(dplyr)

plot_richness(physeq)
# plots observed, chao1, ACE, shannon, Simpson, InvSimpson, Fisher

plot_richness(physeq, measures=c("Simpson", "Shannon", "Observed")) 
# only does simpson, observed shannon, can be adjusted to any indice listed above
