# Goal: to find the alpha or beta diversity down to a specific taxonomic level

qiime diversity alpha \
  --i-table phyla-table.qza \
  --p-metric chao1 \
  --o-alpha-diversity phyla-chao1.qza

qiime diversity alpha \
  --i-table phyla-table.qza \
  --p-metric shannon \
  --o-alpha-diversity phyla-shannon.qza

qiime diversity alpha \
  --i-table phyla-table.qza \
  --p-metric simpson \
  --o-alpha-diversity phyla-simpson.qza

qiime diversity beta \
 --i-table phyla-table.qza \
 --p-metric braycurtis \
 --o-distance-matrix phyla-unweighted_unifrac_distance_matrix.qza

## different diversity indices using the relative phyla table as the input so this is diversity indices of phyla (class, order etc)
